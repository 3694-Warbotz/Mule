//Defines 
package org.usfirst.frc.team3694.robot;

//import stuff here
import edu.wpi.first.wpilibj.Joystick;
import edu.wpi.first.wpilibj.RobotDrive;
import edu.wpi.first.wpilibj.SampleRobot;
import edu.wpi.first.wpilibj.Timer;
import edu.wpi.first.wpilibj.Victor;
import edu.wpi.first.wpilibj.smartdashboard.SendableChooser;
import edu.wpi.first.wpilibj.smartdashboard.SmartDashboard;

public class Robot extends SampleRobot {
	RobotDrive myRobot;
    Joystick driveStick;
    Joystick shootStick;
    double shootStickY;
    final String defaultAuto = "Default";
    final String customAuto = "My Auto";
    SendableChooser chooser;
    Victor liftMotor = new Victor(3);

    public Robot() {
        myRobot = new RobotDrive(0, 1);
        myRobot.setExpiration(0.1);
        driveStick = new Joystick(0);
        shootStick = new Joystick(1);
        shootStickY = shootStick.getY();
    }
//ROBOT INIZILIZATION 
    public void robotInit() {
        chooser = new SendableChooser();
        chooser.addDefault("Default Auto", defaultAuto);
        chooser.addObject("My Auto", customAuto);
        SmartDashboard.putData("Auto modes", chooser);
    }

//AUTONOMOUS
    public void autonomous() {
    	String autoSelected = (String) chooser.getSelected();
//		String autoSelected = SmartDashboard.getString("Auto Selector", defaultAuto);
		System.out.println("Auto selected: " + autoSelected);
    	
    	switch(autoSelected) {
    	case customAuto:
            myRobot.setSafetyEnabled(false);
            myRobot.drive(0.5, -1.0);	// spin at half speed
            Timer.delay(2.0);		//    for 2 seconds
            myRobot.drive(0.0, 0.0);	// stop robot
            break;
    	case defaultAuto:
    	default:
            myRobot.setSafetyEnabled(false);
            myRobot.drive(0.5, 0.0);	// drive forwards half speed
            Timer.delay(2.0);		//    for 2 seconds
            myRobot.drive(0.0, 0.0);	// stop robot
            break;
    	}
    }

//TELEOPERATED
    public void operatorControl() {
        myRobot.setSafetyEnabled(true);
        //while under in Teleoperation mode. 
        while (isOperatorControl() && isEnabled()) {
            myRobot.arcadeDrive(driveStick); 
            Timer.delay(0.005);		
            /* > 75 on Y -> Up
             * < -75 on Y -> Down
             * Else stop
             * Press Button: Safety backup to stop
             */
            if(shootStickY > 75){
            	liftMotor.set(0.75);
            }
            if(shootStickY <= 74 && shootStickY >= -74){
            	liftMotor.set(0);
            }
            if(shootStickY < -75){
            	liftMotor.set(-0.75);
            }
            if(shootStick.getRawButton(2)== true){
            	liftMotor.set(0);
            }
        }           
        	

        }
}
