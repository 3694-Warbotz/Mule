//Defines 
package org.usfirst.frc.team3694.robot;

//import stuff here
import edu.wpi.first.wpilibj.Joystick;
import edu.wpi.first.wpilibj.RobotDrive;
import edu.wpi.first.wpilibj.SampleRobot;
import edu.wpi.first.wpilibj.Timer;
import edu.wpi.first.wpilibj.Victor;

//ROBOT CODE FROM THIS POINT ON
public class Robot extends SampleRobot {
	RobotDrive myRobot;
    Joystick driveStick;
    Joystick shootStick;
    double shootStickY;
    Victor liftMotor = new Victor(3);

    public Robot() {
        myRobot = new RobotDrive(0, 1);
        myRobot.setExpiration(0.1);
        driveStick = new Joystick(0);
        shootStick = new Joystick(1);
        shootStickY = shootStick.getY();
    }
    //Joystick to use, minimum threshold Y, maximum threshold Y, Motor to use, speed
    public void StickControl (Joystick a, int Min, int Max, Victor motorA, double Speed){
    	double joystickY = a.getY();
    	int altMax = Max-1;
    	int altMin = Min+1;
    	if(joystickY > Max){
    		motorA.set(Speed);
        }
        if(joystickY <= altMax && joystickY >= altMin){
        	motorA.set(0);
        }
        if(joystickY < Min){
        	motorA.set(-Speed);
        }
        if(a.getRawButton(2)== true){
        	motorA.set(0);
        }
    }
//ROBOT INIZILIZATION 
    public void robotInit() {
    }

//AUTONOMOUS
    public void autonomous() {
            myRobot.setSafetyEnabled(false);
            myRobot.drive(0.5, 0.0);	// drive forwards half speed
            Timer.delay(2.0);		//    for 2 seconds
            myRobot.drive(0.0, 0.0);	// stop robot
         }

//TELEOPERATED
    public void operatorControl() {
        myRobot.setSafetyEnabled(true);
        //while under in Teleoperation mode. 
        while (isOperatorControl() && isEnabled()) {
            myRobot.arcadeDrive(driveStick); 
            Timer.delay(0.005);		
            /* > 75 on Y -> Up
             * < -75 on Y -> Down
             * Else stop
             * Press Button: Safety backup to stop
             */
            StickControl(shootStick,-75,75,liftMotor,0.75);
        }           
        	
        }
}
//END BRACKET, ROBOT CODE ENDS
